@model BradsBank.Views.Home.WithdrawModel
@{
}

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>

<header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="container">
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Bank of Brad</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a class="nav-link text-dark" href="~/Home/AccountActions?username=@Model.Username">Manage Account</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link text-dark" href="~/Home/TransactionsActions?username=@Model.Username">View Transactions</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Log Out</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
</header>

<style>
    form {
        margin: 0 auto;
        width: 500px;
    }

    label {
        display: inline-block;
        padding: 3px 6px;
        text-align: right;
        width: 150px;
        vertical-align: top;
    }

    select {
        width: 150px;
    }

    .amount {
        width: 150px;
    }

    .submit {
        margin-left: 150px;
    }
</style>

<div class="withdraw">
    <form action="~/Home/WithdrawMoney">
        <input type="hidden" name="username" value="@Model.Username" />

        <div class="selectaccount">
            <p>
                <label for="account">Withdraw From</label>
                <select name="accountFrom" id="accountFrom">
                    <option name="accountFrom" class="op1" value="Savings">Savings - $@Model.AmountSavings</option>
                    <option name="accountFrom" class="op2" value="Checking">Checking - $@Model.AmountCheckings</option>
                    <option name="accountFrom" class="op3" value="Credit Card">Credit Card - $@Model.AmountCredit</option>
                </select>
            </p>
        </div>
        <p>
            <label for="amount">Withdraw Amount</label>
            <input class="amount" type="text" name="amount" id="withdrawamount">
        </p>
        <input type="submit" class="submit" value="Withdraw">
    </form>
</div>
