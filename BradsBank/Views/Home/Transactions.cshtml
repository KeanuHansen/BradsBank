@model BradsBank.Views.Home.TransactionsModel
@{
}

<style>
    table, th, td {
        border: 1px solid black;
        margin-left: auto;
        margin-right: auto;
        text-align: center;
        height: 30px;
        width: 1000px;
    }
</style>

<div class="text-center">
    <section>
        <h1>@Model.TransactionsType Transactions</h1><br>
        <table>
            
            <thead>
                <tr>
                    <th>Date</th>
                    <th>Type</th>
                    <th>Before ($)</th>
                    <th>After ($)</th>
                    <th>Description</th>
                </tr>
            </thead>

            <tbody>
                @foreach (var row in Model.TransactionHistory)
                {
                    <tr>
                        <td>@row[0]</td>
                        <td>@row[1]</td>
                        <td>@row[2]</td>
                        <td>@row[3]</td>
                        <td>@row[4]</td>
                    </tr>
                }
            </tbody>

        </table>
    </section>
</div>
